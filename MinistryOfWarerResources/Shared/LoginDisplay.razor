<AuthorizeView>
    <Authorized>
        <a href="Identity/Account/Manage" class="text-white" style="margin-right:10px">Hello, @context.User.Identity?.Name!</a>
        <form method="post" action="Identity/Account/LogOut">
            <button  type="submit" class="btn btn-outline-danger text-white" >Log out</button>
        </form>
    </Authorized>
    <NotAuthorized>
        <a href="Identity/Account/Register" class="text-white">Register</a>
        <br/>
        <a style="margin-left:10px" href="Identity/Account/Login" class="text-white">Log in</a>
    </NotAuthorized>
</AuthorizeView>
